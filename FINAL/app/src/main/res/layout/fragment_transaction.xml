<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/bg_main">

    <!-- Título -->
    <TextView
        android:id="@+id/tvFormTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Nuevo Movimiento"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="30dp" />

    <!-- Selector Tipo (Ingreso/Gasto) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIPO DE TRANSACCIÓN"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <RadioGroup
        android:id="@+id/rgTipo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_slate"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp">

        <!-- Botón para Ingreso -->
        <RadioButton
            android:id="@+id/rbIngreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ingreso"
            android:textColor="@color/emerald_400"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selector_radio" />

        <!-- Botón para Gasto -->
        <RadioButton
            android:id="@+id/rbGasto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gasto"
            android:textColor="@color/red_400"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selector_radio"
            android:checked="true" />
    </RadioGroup>

    <!-- Monto Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONTO (€ / $ / Bs)"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etMonto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:textSize="32sp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp" />

    <!-- Descripción Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCRIPCIÓN BREVE"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej. Pago de matrícula"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginTop="8dp" />



    <!-- Botón de Guardar -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="GUARDAR MOVIMIENTO"
        android:backgroundTint="@color/neon_purple"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:cornerRadius="12dp" />

</LinearLayout>