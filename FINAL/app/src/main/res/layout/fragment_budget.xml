<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presupuestos"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión mensual"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Card 1: Comida -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/slate_700"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header con categoría y montos -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comida"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$450"
                        android:textColor="@color/emerald_400"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <!-- Subtítulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="de $600"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />

                <!-- ProgressBar con estilo mejorado -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <!-- Fondo de la barra -->
                    <View
                        android:id="@+id/progressBackground"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@drawable/progress_background"
                        android:layout_centerVertical="true" />

                    <!-- Barra de progreso principal -->
                    <View
                        android:id="@+id/progressFill"
                        android:layout_width="75%"
                        android:layout_height="12dp"
                        android:background="@drawable/progress_fill_normal"
                        android:layout_alignStart="@id/progressBackground"
                        android:layout_centerVertical="true" />

                    <!-- Indicador de porcentaje sobre la barra -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75%"
                        android:textColor="@color/text_primary"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="@color/bg_card"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_alignTop="@id/progressFill"
                        android:layout_marginTop="-10dp"
                        android:layout_marginStart="70%" />

                </RelativeLayout>

                <!-- Texto descriptivo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quedan $150 disponibles"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_gravity="end" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2: Transporte (warning 90%) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/slate_700"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transporte"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$180"
                        android:textColor="@color/amber_500"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="de $200"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <View
                        android:id="@+id/progressBackground2"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@drawable/progress_background"
                        android:layout_centerVertical="true" />

                    <View
                        android:id="@+id/progressFill2"
                        android:layout_width="90%"
                        android:layout_height="12dp"
                        android:background="@drawable/progress_fill_warning"
                        android:layout_alignStart="@id/progressBackground2"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textColor="@color/amber_500"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="@color/bg_card"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_alignTop="@id/progressFill2"
                        android:layout_marginTop="-10dp"
                        android:layout_marginStart="85%" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quedan $20 disponibles"
                    android:textColor="@color/amber_500"
                    android:textSize="12sp"
                    android:layout_gravity="end" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card 3: Ocio (over budget 120%) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/red_500"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ocio"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$120"
                        android:textColor="@color/red_500"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="de $100"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <View
                        android:id="@+id/progressBackground3"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@drawable/progress_background"
                        android:layout_centerVertical="true" />

                    <!-- Barra al 100% (límite) -->
                    <View
                        android:id="@+id/progressFill3"
                        android:layout_width="100%"
                        android:layout_height="12dp"
                        android:background="@drawable/progress_fill_over"
                        android:layout_alignStart="@id/progressBackground3"
                        android:layout_centerVertical="true" />

                    <!-- Indicador de sobrepaso -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120%"
                        android:textColor="@color/red_500"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="@color/bg_card"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_alignTop="@id/progressFill3"
                        android:layout_marginTop="-10dp"
                        android:layout_marginStart="115%" />

                </RelativeLayout>

                <!-- Mensaje de alerta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚠"
                        android:textColor="@color/red_500"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Límite excedido en $20"
                        android:textColor="@color/red_500"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botón para agregar nuevo presupuesto -->
        <Button
            android:id="@+id/btnAddBudget"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="+ Nuevo Presupuesto"
            android:textColor="@color/neon_purple"
            android:textSize="16sp"
            app:cornerRadius="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/slate_700"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>