<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/bg_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/slate_700"
    app:strokeWidth="1dp"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header con categoría y montos -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comida"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$450"
                android:textColor="@color/emerald_400"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de $600"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <!-- ProgressBar con ConstraintLayout para porcentajes -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Fondo de la barra -->
            <View
                android:id="@+id/progressBackground"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:background="@color/slate_700"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Barra de progreso principal -->
            <View
                android:id="@+id/progressFill"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:background="@color/emerald_400"
                app:layout_constraintEnd_toStartOf="@+id/tvPercent"
                app:layout_constraintStart_toStartOf="@id/progressBackground"
                app:layout_constraintTop_toTopOf="@id/progressBackground"
                app:layout_constraintWidth_percent="0.75" />

            <!-- Indicador de porcentaje sobre la barra -->
            <TextView
                android:id="@+id/tvPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textColor="@color/text_primary"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@color/bg_card"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginTop="-10dp"
                app:layout_constraintStart_toStartOf="@id/progressBackground"
                app:layout_constraintTop_toTopOf="@id/progressBackground"
                app:layout_constraintHorizontal_bias="0.75" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Texto descriptivo -->
        <TextView
            android:id="@+id/tvRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quedan $150 disponibles"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_gravity="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>