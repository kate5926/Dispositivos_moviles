<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reports.ReportsFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportes Mensuales"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/sp_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Seleccionar Mes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp" />

    <Spinner
        android:id="@+id/sp_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Seleccionar Año"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_month"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Espacio para gráfico (implementar con MPAndroidChart en código) -->
    <FrameLayout
        android:id="@+id/fl_chart_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_year"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>